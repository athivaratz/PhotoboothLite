# PhotoBooth Lite - Configuration
# Copy this file to .env and customize

# === FOLDER PATHS ===
# Path to watch for new photos from camera
# Windows: C:\\Users\\YourName\\Pictures\\Camera
# macOS/Linux: /Users/YourName/Pictures/Camera
WATCH_PATH=

# Folder to store processed photos (relative to project root)
PROCESSED_FOLDER=./processed_photos

# === FILE SETTINGS ===
# Enable automatic scanning
AUTO_SCAN=true

# Supported file types
FILE_TYPES=.jpg,.jpeg,.png

# === IMAGE PROCESSING ===
# Thumbnail size (width,height)
THUMBNAIL_SIZE=300,300

# Max photos in gallery
MAX_PHOTOS_DISPLAY=50

# === SERVER ===
PORT=5000
HOST=localhost

# === DEBUG ===
DEBUG=false
